<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2f3d53</item>
        <item name="colorPrimaryVariant">#2f3d53</item>
        <item name="colorOnPrimary">#2f3d53</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#c84843</item>
        <item name="colorSecondaryVariant">#c84843</item>
        <item name="colorOnSecondary">#c84843</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TMDB.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TMDB.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TMDB.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>